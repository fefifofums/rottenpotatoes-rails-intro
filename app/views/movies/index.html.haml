-#  This file is app/views/movies/index.html.haml
%h2 All Movies
= form_tag movies_path, :method => :get do
  Include:
  - @all_ratings.each do |rating|
    = rating
    -#https://stackoverflow.com/questions/18323342/nomethoderror-at-undefined-method-include-for-nilnilclass
    = check_box_tag "ratings[#{rating}]", 1, if @chosen_ratings.nil?; true else @chosen_ratings.include?(rating) end
  = submit_tag 'Refresh'

%table#movies.table.table-striped.col-md-12
  %thead
    %tr
      %th{class: @title_hilite}= link_to "Movie Title", movies_path(sort: 'title')
      %th Rating
      %th{class: @release_date_hilite}= link_to "Release Date", movies_path(sort: 'release_date')
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path